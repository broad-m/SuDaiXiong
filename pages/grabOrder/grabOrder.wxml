<!--pages/grabOrder/grabOrder.wxml-->



<view class='page'>
  <view class='order-item' wx:for='{{orders}}' wx:key='{{item.id}}'>
    <view class='checkbox'></view>
    <view class='avatar'>
      <image src="/images/leaf.jpg"></image>
    </view>
    <view class='info'>
      <view>
        <label>姓名：</label>
        <text>{{item.name}}</text>
      </view>
       <view>
        <label>性别：</label>
        <text>{{item.gender}}</text>
      </view>
       <view>
        <label>手机号码：</label>
        <text>{{item.mobile}}</text>
      </view>
       <view>
        <label>申请产品：</label>
        <text>{{item.applyProduction}}</text>
      </view>
       <view>
        <label>意向金额：</label>
        <text>{{item.interestAmount}}</text>
      </view>
    </view>
    <view class='btn'>
      <button class="weui-btn mini-btn" type='red'  size='mini'>确认领取</button>
    </view>
  </view>
</view>
