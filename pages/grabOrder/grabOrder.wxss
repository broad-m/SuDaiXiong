/* pages/grabOrder/grabOrder.wxss */

.order-item{
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid #d9d9d9;
  padding: 10px 15px;
  display: flex;
}

.order-item button{
  background: #f92d2d;
  color: white;
  display: inline-block;
  width:auto;
}

.avatar image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.info{
  font-size: 30rpx;
}

.info label{
  display: inline-block;
  width: 150rpx;
  text-align: right;
}

.info text{
  display: inline-block;
  width: 220rpx;
  text-align: center;
}