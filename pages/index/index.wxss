@import "./weui.wxss";

page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
swiper{
  height: 280rpx;
}

.swiper-item{
  display: block;
  height: 150px;
  border: 1px solid red;
  background: red;
}
.slide-image{
  display: block;
  width: 100%;
}


.navigator {
  padding: 15rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 40rpx;
  padding-right:40rpx;
  color: red;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.news-container{
  
  position: relative;
  background: #eeeeee;
}

.news-item{
padding: 0;
overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.service{
  padding: 15rpx 20rpx;
   background:#f8D8D8;
}

.service-container{
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-between;
}

.service-item{
  width: 49%;
  height: 100px;
  line-height: 100px;
  text-align: center;
  background-color: #eeeeee;
  margin-bottom: 5px;
}